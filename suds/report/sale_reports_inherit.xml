<?xml version="1.0" ?>
<odoo>
    <template id="report_saleorder_inherit" inherit_id="sale.report_saleorder_document">
        <xpath expr="//table[hasclass('table','table-condensed')]/thead/tr/th[last()]" position="after">
            <th>Remarks</th>
        </xpath>
        <xpath expr="//tbody[hasclass('sale_tbody')]/t/t[2]/tr/td[last()]" position="after">
            <td>
                <span> </span>
            </td>
        </xpath>

        <xpath expr="//div[hasclass('oe_structure')][2]" position="before">
            <div class="container">
                <div class="row">
                    <div class="col-xs-6"></div>
                    <div class="col-xs-6">
                        <span>Received the above items in good order and condition.</span>
                    </div>
                </div>
                <br/>
                <div class="row">
                    <div class="col-xs-6">
                       <p>Delivered By: ________________</p> 
                       <span>Date:</span>
                    </div>
                    <div class="col-xs-6">
                        <p>Received By:________________</p> 
                       <span>Date:</span>
                    </div>
                </div>
            </div>
        </xpath>

