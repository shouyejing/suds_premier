<?xml version="1.0" ?>
<odoo>
    <data>

        <template id="sales_invoice_inherit_view" inherit_id="account.report_invoice_document">

            <div class="row" position="replace"/>

            <h2 position="before">
                <div class="row">
                    <div name="invoice_address" class="col-xs-6" style="text-align: left;">
                        <p> BILL TO </p>
                        <address t-field="o.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                        <div t-if="o.partner_id.vat" class="mt16">
                            <t t-esc="o.company_id.country_id.vat_label or 'TIN'"/>
:                            <span t-field="o.partner_id.vat"/>
                        </div>
                    </div>
                </div>
            </h2>

        
        <xpath expr="//div[hasclass('row','mt32','mb32')]" position="replace">
            <div class="row mt32 mb32">
                        <div class="col-xs-2" t-if="o.name">
                            <strong>Description:</strong>
                            <p t-field="o.name"/>
                        </div>
                        <div class="col-xs-2" t-if="o.date_invoice">
                            <strong>Invoice Date:</strong>
                            <p t-field="o.date_invoice"/>
                        </div>
                        <div class="col-xs-2" t-if="o.date_due">
                            <strong>Due Date:</strong>
                            <p t-field="o.date_due"/>
                        </div>
                        <div class="col-xs-2" t-if="o.origin">
                            <strong>Source:</strong>
                            <p t-field="o.origin"/>
                        </div>
                        <div class="col-xs-2" t-if="o.partner_id.ref">
                            <strong>Customer Code:</strong>
                            <p t-field="o.partner_id.ref"/>
                        </div>
                        <div name="reference" class="col-xs-2" t-if="o.reference">
                            <strong>Reference:</strong>
                            <p t-field="o.reference"/>
                        </div>
                    </div>
        </xpath>
        
        
        <table name="invoice_line_table" position="replace"/>
        <t t-set="display_discount" position="after">
            <table class="table table-condensed" name="invoice_line_table">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Description</th>
                        <th class="hidden">Source Document</th>
                        <th class="text-right">Quantity</th>
                        <th class="text-right">UoM</th>
                        <th class="text-right">Unit Price</th>
                        <th t-if="display_discount" class="text-right">Disc.(%)</th>
                        <th class="text-right">Taxes</th>
                        <th class="text-right">Amount</th>
                        <th>Remarks</th>
                    </tr>
                </thead>
                <tbody class="invoice_tbody">
                    <tr t-foreach="o.invoice_line_ids" t-as="l">
                            <td>
                                <span t-field="l.product_id"/>
                            </td>
                            <td>
                                <span t-field="l.name"/>
                            </td>
                            <td class="hidden">
                                <span t-field="l.origin"/>
                            </td>
                            <td class="text-right">
                                <span t-field="l.quantity"/>
                            </td>
                        <td class="text-right"> <span t-field="l.uom_id" groups="product.group_uom"/> </td>
                        <td class="text-right">
                            <span t-field="l.price_unit"/>
                        </td>
                        <td t-if="display_discount" class="text-right">
                            <span t-field="l.discount"/>
                        </td>
                        <td class="text-right">
                            <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.invoice_line_tax_ids))"/>
                        </td>
                        <td class="text-right" id="subtotal">
                            <span t-field="l.price_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                        </td>
                        <td>
                            <span> </span>
                        </td>
                    </tr>
                    <tr t-foreach="range(max(5-len(o.invoice_line_ids),0))" t-as="l">
                        <td t-translation="off">&amp;nbsp;</td>
                        <td class="hidden"/>
                        <td/>
                        <td/>
                        <td t-if="display_discount"/>
                        <td/>
                        <td/>
                    </tr>
                </tbody>
            </table>
        </t>

        </template>



    </data>
</odoo>