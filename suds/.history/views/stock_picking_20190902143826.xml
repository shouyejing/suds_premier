<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form view -->
        <record id="stock_picking_analytic_account_view_form" model="ir.ui.view">
            <field name="name">stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="analytic_account_id" domain="[('company_id', '=', company_id)]" attrs="{'readonly': [('picking_type_code', 'in', ['incoming', 'outgoing'])]}'"/>
                    <field name='company_name' invisible="1"/>
                </field>
            </field>
        </record>


    </data>
</odoo>